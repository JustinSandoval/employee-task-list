<% layout('layouts/boilerplate') %>

<div class="text-center">
    <h1>Employee Task List</h1>
    <!-- modal button -->
    <button type="button" class="btn btn-dark" style=background-color:#eb8934 data-bs-toggle="modal" data-bs-target="#addModal">
        Add Task
    </button>
</div>
<div>
    <p class="h3 d-inline">In Progress</p>
    <div class="btn-group">
        <button class="btn btn-secondary btn-sm dropdown-toggle ms-4" type="button" id="dropdownMenuButton1" data-bs-toggle="dropdown" aria-expanded="false">
          Filter by:
        </button>
        <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton1">
          <li><a class="dropdown-item active" href="/filtered">Today   
          </a></li>
          <li><a class="dropdown-item" href="/">All Days</a></li>
        </ul>
    </div>
      
</div>
<hr>
<div class="row overflow-auto" style="height: 216px; max-width: 1000px; min-width: 400px;">
    <div class="col">
        <div class="list-group">
            <% const isComplete = (t) => { %>
                <% if(t.completed === 'on') { %>
                    <%= 'list-group-item-success' %>
                <% } else if(Date.now() > new Date(t.deadline)) { %>
                    <%= 'list-group-item-danger' %>
                <% } else { %>
                    <%= 'list-group-item-info' %>
                <% } %>
            <% } %>  
            <% for(let t of sortedTasks) { %>
                <% if(t.completed != 'on') { %>

                    <a href="/task/<%= t._id %> " class="list-group-item list-group-item-action d-flex align-items-center <% isComplete(t) %> ">
                        <form action="/filtered/<%= t._id %>?_method=PATCH" method="POST">
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" name="completed" onchange="this.form.submit()" id="completed" <%= t.completed === 'on' ? 'checked' : '' %> > 
                            </div>
                        </form>
                        <span class="ms-4 me-auto"><%= t.title %></span>
                        <% if (t.completed === 'on') { %>
                            <small><span class="badge bg-success rounded-pill">Completed</span></small>
                        <% } else if(Date.now() > new Date(t.deadline)){ %> 
                            <small><span class="badge bg-danger rounded-pill">Overdue</span></small>
                            <% } else { %>
                                <small><span class="badge bg-primary rounded-pill">In Progress</span></small>
                            <% } %>
                                
                        <span class="ps-4 w-25"><%= dayjs(t.deadline).format('ddd MMM D, YYYY - h:mm a') %></span>
                    </a>
                <% } %>
            <% } %> 
        </div>
    </div>
</div>

<div>
    <p class="h3 pt-3">Completed</p>
</div>
<hr>
<div class="row overflow-auto" style="height: 215px; max-width: 1000px; min-width: 400px;">
    <div class="col">
        <div class="list-group">
            <% for(let t of sortedTasks) { %> 
                <% if(t.completed === 'on') { %>
                    <a href="/task/<%= t._id %> " class="list-group-item list-group-item-action d-flex align-items-center list-group-item-success">
                        <form action="/filtered/<%= t._id %>?_method=PATCH" method="POST">
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" name="completed" onchange="this.form.submit()" id="completed" <%= t.completed === 'on' ? 'checked' : '' %>  > 
                            </div>
                        </form>
                        <span class="ms-4 me-auto"><%= t.title %></span>
                        
                        <form action="/task/<%= t._id %>?_method=DELETE" method="POST">
                            <button type="submit" class="fabutton">
                                <i style="color: rgb(146, 141, 141);" class="fas fa-trash"></i>
                            </button>
                        </form>
                    </a>
                <% } %>
            <% } %> 
            </div>
        </div>
    </div>

<!-- modal -->
    <div class="modal fade" id="addModal" tabindex="-1" aria-labelledby="addModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title" id="addModalLabel">Add Task</h5>
              <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form action="/filtered/add" method="POST">
                    <div class="mb-3">
                        <label for="title" class="form-label">Title</label>
                        <input type="text" class="form-control" name="task[title]" id="title" placeholder="Enter title">
                      </div>
                      <div class="mb-3">
                        <label for="description" class="form-label">Description</label>
                        <textarea class="form-control" name="task[description]" id="description" rows="3"></textarea>
                      </div>
                      <div class="mb-3">
                        <label for="formFileSm" class="form-label">File Upload</label>
                        <input class="form-control form-control-sm" id="formFileSm" type="file">
                      </div>
                      <div class="mb-3">
                        <label for="deadline" class="form-label">Deadline</label>
                        <input type="datetime-local" style=display:block; name="task[deadline]" id="deadline">
                      </div>
                      <button class="btn btn-warning" style=background-color:#eb8934>Submit</button>
                 </form>
            </div>
          </div>
        </div>
    </div>
