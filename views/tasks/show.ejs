<% layout('layouts/boilerplate') %>
<div class="row">
    <div class="col-8 offset-2 d-flex justify-content-center">
        <div class="card" style="width: 20rem;">
            <div class="card-body">
              <p class="h5 card-title d-flex justify-content-between">
                  <%= task.title %>
                  <small><span class="badge bg-danger rounded-pill"><%= Date.now() > new Date(task.deadline) ? 'OVERDUE': null %></span></small>
                </p>
              <p class="card-text"><%= task.description %> </p>
            </div>
            <ul class="list-group list-group-flush">
              <li class="list-group-item">
                <div class="form-check form-switch">
                    <input class="form-check-input" type="checkbox" id="flexSwitchCheckDefault">
                    <label class="form-check-label" for="flexSwitchCheckDefault">Completed</label>
                  </div>
              </li>
              <li class="list-group-item">
                  Deadline: <%= dayjs(task.deadline).format('ddd, MMM D YYYY @ h:mm a') %> 
              </li>
            </ul>
            <div class="card-footer text-muted">
                Created: <%= dayjs(task.createdAt).format('ddd, MMM D YYYY @ h:mm a') %>
            </div>
          </div>
    </div>
</div>