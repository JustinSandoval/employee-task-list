<% layout('layouts/boilerplate') %> 

<div class="text-center">
    <h1>Employee Task List</h1>
    
    <a href="/task/add" style=background-color:#eb8934 class="btn btn-sm">Add Task</a>
</div>
<p class="h3">In Progress</p>
<hr>
<div class="row overflow-auto" style="height: 215px">
    <div class="col">
        <div class="list-group">
            <% const sortedTasks = tasks.sort((a,b) =>a.deadline-b.deadline) %>
            <% const isComplete = (t) => { %>
                <% if(t.completed === 'on') { %>
                    <%= 'list-group-item-success' %>
                <% } else if(Date.now() > new Date(t.deadline)) { %>
                    <%= 'list-group-item-danger' %>
                <% } else { %>
                    <%= 'list-group-item-info' %>
                <% } %>
            <% } %>  
            <% for(let t of sortedTasks) { %>
                <% if(t.completed != 'on') { %>

                    <a href="/task/<%= t._id %> " class="list-group-item list-group-item-action d-flex align-items-center <% isComplete(t) %> ">
                        <form action="/task/<%= t._id %>?_method=PATCH" method="POST">
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" name="completed" onchange="this.form.submit()" id="completed" <%= t.completed === 'on' ? 'checked' : '' %> > 
                            </div>
                        </form>
                        <span class="ms-4 me-auto"><%= t.title %></span>
                        <% if (t.completed === 'on') { %>
                            <small><span class="badge bg-success rounded-pill">Completed</span></small>
                        <% } else if(Date.now() > new Date(t.deadline)){ %> 
                            <small><span class="badge bg-danger rounded-pill">Overdue</span></small>
                            <% } else { %>
                                <small><span class="badge bg-primary rounded-pill">In Progress</span></small>
                            <% } %>
                                
                        <span class="ps-4 w-25"><%= dayjs(t.deadline).format('ddd MMM D, YYYY - h:mm a') %></span>
                    </a>
                <% } %>
            <% } %> 
        </div>
    </div>
</div>
<p class="h3 pt-3">Completed</p>
<hr>
<div class="row overflow-auto" style="height: 215px">
    <div class="col">
        <div class="list-group">
            <% for(let t of sortedTasks) { %> 
                <% if(t.completed === 'on') { %>
                    <a href="#" class="list-group-item list-group-item-action d-flex align-items-center list-group-item-success">
                        <form action="/task/<%= t._id %>?_method=PATCH" method="POST">
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" name="completed" onchange="this.form.submit()" id="completed" <%= t.completed === 'on' ? 'checked' : '' %>  > 
                            </div>
                        </form>
                        <span class="ms-4 me-auto"><%= t.title %></span>
                        
                        <form action="/task/<%= t._id %>?_method=DELETE" method="POST">
                            <button type="submit" class="fabutton">
                                <i style="color: rgb(146, 141, 141);" class="fas fa-trash"></i>
                            </button>
                        </form>
                    </a>
                <% } %>
            <% } %> 
            </div>
        </div>
    </div>

